<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Required for Node.js apps in IIS -->
    <handlers>
      <add name="iisnode" path="app.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- Windows Authentication must be configured in IIS Manager, not web.config -->
    <!-- This is because authentication settings are locked at server level -->

    <!-- iisnode configuration for Windows Auth -->
    <iisnode 
      node_env="production"
      nodeProcessCommandLine="&quot;%programfiles%\nodejs\node.exe&quot;"
      interceptor="&quot;%programfiles%\iisnode\interceptor.js&quot;"
      promoteServerVars="AUTH_USER,AUTH_TYPE,LOGON_USER,REMOTE_USER"
      watchedFiles="*.js;*.json;iisnode.yml"
      loggingEnabled="true"
      debuggingEnabled="false"
      devErrorsEnabled="false"
    />

    <!-- URL Rewrite rules -->
    <rewrite>
      <rules>
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^app.js\/debug[\/]?" />
        </rule>
        <rule name="StaticContent">
          <action type="Rewrite" url="public{REQUEST_URI}" />
        </rule>
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
          </conditions>
          <action type="Rewrite" url="app.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Error pages -->
    <httpErrors errorMode="Detailed" />

    <!-- Default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="app.js" />
      </files>
    </defaultDocument>

  </system.webServer>
</configuration>